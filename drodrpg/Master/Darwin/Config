# DROD: Custom
#LDFLAGS_DROD_custom = $(LDFLAGS_DROD_dynamic)
LDFLAGS_DROD_custom = $(LDFLAGS_DROD_somestatic)
# DROD: Release / Beta
#LDFLAGS_DROD_release = -Wl,-s $(LDFLAGS_DROD_dynamic)
LDFLAGS_DROD_release = -Wl,-s $(LDFLAGS_DROD_somestatic)
