	$(ZLIB_LIBS_DYNAMIC) $(JSON_LIBS_DYNAMIC) \
	$(OTHER_LIBS)

# DRODUtil: Static metakit
LDFLAGS_UTIL_staticmk = \
	$(LDFLAGS) \
	$(METAKIT_LIBS_STATIC) $(EXPAT_LIBS_DYNAMIC) \
	$(LIBVORBIS_LIBS_DYNAMIC) $(LIBOGG_LIBS_DYNAMIC) \
	$(LIBTHEORA_LIBS_DYNAMIC) \
